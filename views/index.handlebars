<div class="container">
  <div class="row">
    <div class="col" align="center">
      <h1 class="header">BIGS BURGERS!</h1>

    </div>
  </div>
  <div class="row">
    <div class="col text-center">
      <h2>Ready to Eat!!</h2>
      <ul>
        {{#each burgers}}
        {{#unless devoured}}
        <li>
          {{this.burger_name}}
          <button data-id="{{this.id}}" class="devour-button button">Devour it!</button>
        </li>
        {{/unless}}
        {{/each}}
      </ul>

    </div>
    <div class="col text-center">
      <h2>In your tum-tums</h2>

      <ul>
        {{#each burgers}}
        {{#if devoured}}
        <li>{{this.burger_name}}</li>
        {{/if}}
        {{/each}}
      </ul>

    </div>
  </div>
  <div class="row">
    <div class="col" align="center">

      <h2>Make a burger!</h2>
      <form class="create-form">

        <div class="form-group">
          <label for="newBurger">Burger Name:</label>
          <input type="text" id="newBurger" name="name">
        </div>
        <button class="add-burger-button button" type="submit">Add Burger</button>
      </form>
    </div>
  </div>

</div>